<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/cc_complete_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/complete_inactive" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/cc_complete_img"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <RelativeLayout
            android:id="@+id/cc_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cc_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/listview_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cc_project_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cc_number"
                android:paddingLeft="10dp"
                android:textSize="@dimen/listview_text_size"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/cc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="@dimen/listview_text_size_small" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/wassupnari/AndroidStudioProjects/ToastMate/app/src/main/res/layout/adapter_cc_row.xml -->